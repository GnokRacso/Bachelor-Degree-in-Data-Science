CREATE OR REPLACE TRIGGER TRG_DELETE_RECORD
    BEFORE INSERT ON STAFF_ACTIVITY_STATUS
    FOR EACH ROW
DECLARE
    NEW_DAY NUMBER;
    
BEGIN
    NEW_DAY := TO_CHAR(TO_CHAR(SYSDATE, 'DD'), '99G990');

    IF (NEW_DAY <= 2) THEN
        UPDATE STAFF_SALARY
            SET LATENUM = 0, LATEFINE = 0
            WHERE STAFFID = :NEW.STAFFID;
    END IF;
END;
/